<mujoco model="mobile_inverted_pendulum">

  <compiler angle="degree" coordinate="local" inertiafromgeom="true"/>
  
<option gravity="0 0 -9.81"
        timestep="0.001"
        integrator="RK4"
        viscosity="0.0052"/>

  <default>
    <joint damping="0.1" />
    <geom friction="1.0 0.1 0.1" />
  </default>
  
  <asset>
    <texture name="grid" type="2d" builtin="checker" width="512" height="512" 
             rgb1="0.2 0.3 0.4" rgb2="0.1 0.15 0.2"/>
    <material name="grid" texture="grid" texrepeat="1 1" texuniform="true" reflectance="0.2"/>
  </asset>
  
  <worldbody>
  
    <!-- Ground plane -->
    <geom name="ground" type="plane" pos="0 0 0" size="10 10 0.1" 
          material="grid" condim="3"/>
    
    <light directional="true" pos="0 0 3" dir="0 0 -1"/>
  
    <!-- Mobile robot chassis (elevated by wheel radius) -->
    <body name="chassis" pos="0 0 0.15">
      <!-- <freejoint name="chassis_free"/> -->
      <joint name="chassis_slide_x" type="slide" axis="1 0 0"/>
      <geom name="chassis_geom" type="box" size="0.3 0.15 0.05" 
            density="100" rgba="0.3 0.3 0.8 1"/>
      <geom name="chassis_top" type="box" size="0.15 0.12 0.02" 
            pos="0 0 0.07" density="100" rgba="0.4 0.4 0.9 1"/>
      
      <!-- IMU sensor site on chassis -->
      <site name="imu_site" pos="0 0 0.05" size="0.01"/>
      
    <!-- Left sliding cylinder -->
        <body name="wheel_left" pos="-0.15 0 -0.05"  euler="90 0 0">
        <joint name="left_wheel_joint" type="slide" axis="0 0 1" range="-0.05 0.05"/>
    <geom name="wheel_left_geom" type="cylinder" size="0.1 0.15 0.05" 
              density="50" rgba="0.2 0.1 0.1 1" 
              friction="1.5 0.01 0.01"/>        
            
    </body>

        <!-- Right sliding cylinder -->
        <body name="wheel_right" pos="0.15 0 -0.05" euler="90 0 0">
        <joint name="right_wheel_joint" type="slide" axis="0 0 1" range="-0.05 0.05"/>
          <geom name="wheel_right_geom" type="cylinder" size="0.1 0.15 0.05" 
              density="50" rgba="0.2 0.1 0.1 1" 
              friction="1.5 0.01 0.01"/>
        </body>

   
      <!-- Inverted pendulum mount point -->
      <body name="pendulum_base" pos="0 0 0.1">
        
        <!-- Pendulum rod -->
        <body name="pendulum_rod" pos="0 0 0">
          <joint name="pendulum_hinge" type="hinge" axis="0 1 0" 
                 damping="0.1" frictionloss="0" 
                 range="-180 180" limited="false"/>
          
          <!-- Rod visualization -->
          <geom name="pendulum_rod_geom" type="capsule" 
                fromto="0 0 0 0 0 0.85" size="0.010" 
                density="2" rgba="0.8 0.2 0.2 1"/>
          
          <!-- Top mass (the ball to balance) -->
          <body name="pendulum_mass" pos="0 0 0.8">
            <geom name="top_mass_geom" type="sphere" size="0.08" 
                  density="6" rgba="0.9 0.1 0.1 1"/>
            
  
          </body>
          
        </body>
      </body>
  
    </body>
  </worldbody>
  

  <!-- <actuator>
  <velocity name="cart_motor" joint="chassis_slide_x"
            kv="20" ctrlrange="-20 20"/>
</actuator> -->

<actuator>
  <motor name="cart_motor" joint="chassis_slide_x" gear="100"/>
</actuator> 



<equality>
    <weld body1="wheel_left" body2="wheel_right"/>
</equality>


  <sensor>
    <!-- Pendulum angle -->
    <jointpos name="pendulum_angle" joint="pendulum_hinge"/>
    <jointvel name="pendulum_velocity" joint="pendulum_hinge"/>
    
    <!-- Wheel positions and velocities -->
    <jointpos name="left_wheel_pos" joint="left_wheel_joint"/>
    <jointvel name="left_wheel_vel" joint="left_wheel_joint"/>
    <jointpos name="right_wheel_pos" joint="right_wheel_joint"/>
    <jointvel name="right_wheel_vel" joint="right_wheel_joint"/>
    
    <!-- Chassis state -->
    <framepos name="chassis_position" objtype="body" objname="chassis"/>
    <framelinvel name="chassis_velocity" objtype="body" objname="chassis"/>
    <framequat name="chassis_orientation" objtype="body" objname="chassis"/>
    <gyro name="chassis_gyro" site="imu_site"/>
    <accelerometer name="chassis_accel" site="imu_site"/>
  </sensor>

</mujoco>